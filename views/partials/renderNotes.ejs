<% if(notes != null && notes.length > 0){ %>
    <% notes.forEach(note => { %>
    
    <div class="note">

        <div class="note-title">
            
           <%= note.title %> 

                <nav class="note-nav">
                    <ul>
                    <li><a href="/notes/<%= note.id %>" class="view-btn index-button">🔍</a></li>
                    <li><a href="/notes/<%= note.id %>/edit" class="edit-btn index-button">📕</a></li>
                    <li><%- include('deleteForm2.ejs', {url: `/notes/${note.id}?_method=DELETE`} ) %></li>
                    </ul>
                </nav>
        
        </div>

        <% if(note.description.length > 75){ %>

            <div class="note-description">

                <%= note.description.substring(0,75)%>.....

            </div>

        <% }else{ %>

            <div class="note-description">

                <%= note.description.substring(0,75)%>

            </div>

        <% } %>

    </div>
        
        <br>

    <% }) %>

<% }else{ %>

    <center>
    <div>No Notes to Render</div>
    <div>Click <a href="/notes/new">Here</a> to start creating</div>
    </center>

<% } %>